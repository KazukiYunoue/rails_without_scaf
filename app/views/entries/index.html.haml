- if notice
  .alert.alert-success= notice
%h1
  Title: #{@blog.title}
= link_to 'Edit', edit_blog_path(@blog), id: "edit_blog_#{@blog.id}"
| #{link_to 'Back', blogs_path}
%h2 Listing entries
%table
  %tr
    %th Title
    %th Body
    %th
  - @entries.each do |entry|
    %tr
      %td= entry.title
      %td= entry.body
      %td= link_to 'Show', entry
      %td= link_to 'Edit', edit_entry_path(entry), id: "edit_entry_#{entry.id}"
      %td= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Entry', new_blog_entry_path(@blog)
