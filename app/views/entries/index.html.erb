<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>
<h1>Title: <%= @blog.title %></h1>
<%= link_to 'Edit', edit_blog_path(@blog), id: "edit_blog_#{@blog.id}" %> | <%= link_to 'Back', blogs_path %>
<h2>Listing entries</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <% @entries.each do |entry| %>
  <tr>
    <td><%= entry.title %></td>
    <td><%= entry.body %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry), id: "edit_entry_#{entry.id}" %></td>
    <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'New Entry', new_blog_entry_path(@blog) %>